        @model IEnumerable<TESTER.Models.Beneficiaries>


@{
    Layout = "HomeLayout";
}
<div class="gallery-banner">
    <h2>Beneficiaries List</h2>
</div>
<div class="container p-3">

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>First Names</th>
            <th>Surname</th>
            <th>Date of Birth</th>
            <th>ID Number</th>
            <th>Postal Address</th>
            <th>Cell No.</th>
            <th>Place</th>
            <th>Commencement Date</th>
            <th>Family Cover</th>
            <th>Marital Status</th>
            <th>Related Persons</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.FirstNames</td>
            <td>@item.Surname</td>
            <td>@item.DateOfBirth?.ToString("yyyy-MM-dd")</td>
            <td>@item.IDNumber</td>
            <td>@item.PostalAddress</td>
            <td>@item.CellNo</td>
            <td>@item.Place</td>
            <td>@item.CommencementDate?.ToString("yyyy-MM-dd")</td>
            <td>@item.FamilyCover</td>
            <td>
                @(item.IsMarried ? "Married " : "")
                @(item.IsSingle ? "Single " : "")
                @(item.IsWidow ? "Widow" : "")
            </td>
            <td>
                @if (item.RelatedPersons != null && item.RelatedPersons.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Relationship</th>
                                <th>First Names</th>
                                <th>Surname</th>
                                <th>Date of Birth</th>
                                <th>ID Number</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var rp in item.RelatedPersons)
                        {
                            <tr>
                                <td>
                                    <input type="text" value="@rp.Relationship" readonly class="form-control form-control-sm" />
                                </td>
                                <td>
                                    <input type="text" value="@rp.FirstNames" readonly class="form-control form-control-sm" />
                                </td>
                                <td>
                                    <input type="text" value="@rp.Surname" readonly class="form-control form-control-sm" />
                                </td>
                                <td>
                                    <input type="text" value="@(rp.DateOfBirth?.ToString("yyyy-MM-dd"))" readonly class="form-control form-control-sm" />
                                </td>
                                <td>
                                    <input type="text" value="@rp.IDNumber" readonly class="form-control form-control-sm" />
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
                else
                {
                    <span>No related persons</span>
                }
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.ID" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>
