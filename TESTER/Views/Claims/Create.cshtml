@model TESTER.Models.Claims
@{
    Layout = "HomeLayout";
}
<div class="gallery-banner">
<h2>Submit a Claim</h2>
</div>
<div class="container7">
    <form asp-action="Create" method="post">
        <ul class="flex-outer">
            <li class="form-group">
                <label asp-for="ClaimNumber" class="control-label">Claim Number</label>
                <input asp-for="ClaimNumber" class="form-control" />
                <span asp-validation-for="ClaimNumber" class="text-danger"></span>
            </li>
            <li class="form-group">
                <label asp-for="MainMember" class="control-label">Main Member</label>
                <input asp-for="MainMember" class="form-control" />
                <span asp-validation-for="MainMember" class="text-danger"></span>
            </li>
            <li class="form-group">
                <label asp-for="DeceasedID" class="control-label">Deceased ID</label>
                <input asp-for="DeceasedID" class="form-control" />
                <span asp-validation-for="DeceasedID" class="text-danger"></span>
            </li>
            <li class="form-group">
                <label asp-for="NameOfDeceased" class="control-label">Name Of Deceased</label>
                <input asp-for="NameOfDeceased" class="form-control" />
                <span asp-validation-for="NameOfDeceased" class="text-danger"></span>
            </li>
            <li class="form-group">
                <label asp-for="DateOfDeath" class="control-label">Date Of Death</label>
                <input asp-for="DateOfDeath" class="form-control" type="date" />
                <span asp-validation-for="DateOfDeath" class="text-danger"></span>
            </li>
           
            <li class="form-group">
                <label asp-for="ClaimDate" class="control-label">Claim Date</label>
                <input asp-for="ClaimDate" class="form-control" />
                <span asp-validation-for="ClaimDate" class="text-danger"></span>
            </li>
            <li class="form-group">
                <label asp-for="CauseOfDeath" class="control-label">Cause Of Death</label>
                <input asp-for="CauseOfDeath" class="form-control" type="date" />
                <span asp-validation-for="CauseOfDeath" class="text-danger"></span>
            </li>
            <button type="submit" class="btn btn-primary">Submit Claim</button>
        </ul>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
