@{
    Layout = "HomeLayout";
}
<style>


    h1 {
        text-align: center;
        color: white;
    }

        .gallery-banner {
            width: 100%;
            height: 200px; /* Adjust height as needed */
            background-image: url('your-image-url.jpg'); /* Replace with your image URL */
            background-color: #BB271A;
            background-size: cover;
            background-position: center;
            color: white;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: Century;
            font-size: 30px;
        

        }

    body2 {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        margin: 20px;
        padding: 0;
        box-sizing: border-box;
        margin-right: 130px;
    }
        
</style>   
<body2>
    <div class="gallery-banner">
        <h1>Contact Us</h1>
    </div>
    
    <div class="contact-container">
        <!-- Contact Form -->
        <div class="contact-form">
            <h2>Contact Us</h2>
            <form>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" required />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required />
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea id="message" name="message" required></textarea>
                </div>
                <button type="submit" class="form-btn">Send Message</button>
            </form>
        </div>

        <!-- Contact Info -->
        <div class="contact-info">
            <h2>Get in Touch</h2>
            <div class="info-item">
                <i class="fas fa-map-marker-alt"></i>
                <span class="info-text">123 Main Street, City, Country</span>
            </div>
            <div class="info-item">
                <i class="fas fa-phone-alt"></i>
                <span class="info-text">+1 (123) 456-7890</span>
            </div>
            <div class="info-item">
                <i class="fas fa-envelope"></i>
                <span class="info-text">info@funeralhome.com</span>
            </div>
        </div>
    </div>

    <!-- FontAwesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

</body2>