        .flex-inner {
            flex: 1 0 220px;
        }

    .flex-outer li p {
        margin: 0;
    }

    

    .flex-outer li button {
        margin-left: auto;
        padding: 8px 16px;
        border: 2px black;
        background: #BB271A;
        color: #f2f2f2;
