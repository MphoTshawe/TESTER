@{

    Layout = "SuccessLayout";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Success</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f2f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: 'Segoe UI', sans-serif;
        }

        .success-card {
            background: #BB271A;

            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .success-icon {
            font-size: 60px;
            color: #BB271A;
            margin-bottom: 20px;
        }

        

        .btn-back {
            margin-top: 30px;
            background-color: black;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.3s ease;
            font-size: 16px;
        }
    </style>
</head>
<body>

    <div class="success-card">
        <h1 style="color: white" class="mb-3">Success!<br />Your quotation was completed successfully sent. </h1>
        

        <a asp-controller= "Home" asp-action="Index" class="btn btn-success btn-back">Go To Home</a>
    </div>

</body>
</html>
