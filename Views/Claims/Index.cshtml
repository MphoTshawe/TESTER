@model IEnumerable<TESTER.Models.Claims>
@{
    Layout = "HomeLayout";
}
<div class="gallery-banner">
<h1>Claims List</h1>
</div>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class=" text-primary"></h2>
        </div>


    </div>
    <br />
@if (Model.Count() > 0)
{
    

    <table class="table">
            <thead>
                <tr>
                    <th>Claim Number</th>
                    <th>Main Member</th>
                    <th>Deceased ID</th>
                    <th>Names of Deceased</th>
                    <th>Date of Death</th>
                    <th>Cause Of Death</th>
                    <th>Claim Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ClaimNumber</td>
                        <td>@item.MainMember</td>
                        <td>@item.DeceasedID</td>
                        <td>@item.NameOfDeceased</td>
                        <td>@item.DateOfDeath?.ToString("yyyy-MM-dd")</td>
                        <td>@item.CauseOfDeath?.ToString("yyyy-MM-dd")</td>
                        <td>@item.ClaimDate</td>
                        <td>
                            <a asp-action="Update" asp-route-id="@item.ID" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
    </table>
}
else{

    <p>No Claims yet</p>

}
</div>
<div class="back">
    <a asp-controller="DashBoard" asp-action="Index" class="btn btn-primary">Back</a>
</div>

<style>
    .gallery-banner {
        width: 100%;
        height: 200px; /* Adjust height as needed */
        background-image: url('your-image-url.jpg'); /* Replace with your image URL */
        background-color: #BB271A;
        background-size: cover;
        background-position: center;
        color: white;
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: Century Gothic;
        font-size: 30px;
        margin-bottom: 60px;
    }

