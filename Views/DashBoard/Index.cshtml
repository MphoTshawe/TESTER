@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "HomeLayout";
}
<div class=" gallery-banner">
    <h2>Dashboard</h2>
</div>


<style>
    .gallery-banner {
        width: 100%;
        height: 200px; /* Adjust height as needed */
        background-image: url('your-image-url.jpg'); /* Replace with your image URL */
        background-color: #BB271A;
        background-size: cover;
        background-position: center;
        color: white;
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: Century Gothic;
        font-size: 30px;
        margin-bottom: 0px;
    }

    
</style>

<style>
    body2 {
        font-family: sans-serif;
        display: flex;
        
        align-items: center;
        min-height: 5vh;
        margin: 0;
        background-color: #f4f4f4;
    }

    .container2 {
        display: flex;
        gap: 35px;
        justify-content: flex-start;
        width: 50vw;
        max-width: 100%;
        padding: 0 100px;
        margin-top: 50px;
        margin-left: 30px;
        flex-wrap: nowrap;
    }

    .card {
        width: 25vw; /* Each card scales with the screen */
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        text-align: center;
        aspect-ratio: 3 / 4; /* Maintains proportional height */
        flex: 1; /* Allow cards to grow and take equal space */
        margin: 0 10px; /* Add some space between cards */
        width: 30%;
        min-width: 350px;
        max-width: 450px;
        box-sizing: border-box;
        transition: transform 0.2s, box-shadow 0.2s, background-color 0.3s; /* Add transition for background color */
        padding: 2rem;
        overflow-x: auto;
        height: 230px;
        flex-wrap: nowrap;
    }

        .card:first-child {
            margin-left: 0; /* Remove left margin from the first card */
        }

        .card:last-child {
            margin-right: 0; /* Remove right margin from the last card */
        }

        .card:hover {
            transform: translateY(-5px); /* Lift the card slightly on hover */
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Increase shadow on hover */
            background-color: #BB271A; /* Change background color to red */
        }

        .card h2 {
            color: #333;
            margin-bottom: 10px;
            transition: color 0.3s; /* Add color transition */
            font-family: Arial;
            font-size: 30px;
            font-weight: 800;
        }

        .card:hover h2 {
            color: white; /* Change heading color to white on hover for contrast */
            font-family: Arial;
            font-size: 30px;
            font-weight: 800;
        }

        .card:hover p {
            color: white; /* Change heading color to white on hover for contrast */
            font-family: Arial;
            font-size: 15px;
            font-weight: 200;
        }

        .card p {
            margin-top: 4px;
            color: #666;
            line-height: 1.6;
            font-family: Arial;
            font-size: 15px;
            font-weight: 200;
        }

    .icon2 {
        font-size: 3em;
        color: #4CAF50; /* Green color for icons */
        margin-bottom: 15px;
    }

    /* Placeholder for icons - replace with actual icon elements or image tags */
    .icon-placeholder {
        width: 60px;
        height: 60px;
        background-color: #e0e0e0;
        margin: 0 auto 15px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
    }


    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24
    }

    .Dall{
        margin-bottom: 50px;
        background-color: #f4f4f4;
        width:100%
    }
</style>


