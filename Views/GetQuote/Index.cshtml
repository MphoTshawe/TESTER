@model IEnumerable<TESTER.Models.GetQuote>

    @{
    Layout = "HomeLayout";
    }
<div class="gallery-banner">
<h1>Quotes</h1>
</div>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class=" text-primary"></h2>
        </div>


    </div>
    <br />
    
    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Title</th>
                    <th>Email</th>
                    <th>Cell Number</th>
                    <th>Plan</th>
                    <th>Message</th>
                      

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var getquote in Model)
                {
                    <tr>
                        <td>@getquote.ID</td>
                        <td>@getquote.Name</td>
                        <td>@getquote.Surname</td>
                        <td>@getquote.Title</td>
                        <td>@getquote.Email</td>
                        <td>@getquote.CellNumber</td>
                        <td>@getquote.Plan</td>
                        <td>@getquote.Message</td>
                        
                        <td>
                            <a asp-action="Update" asp-route-id="@getquote.ID" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@getquote.ID" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Quoates created yet</p>
    }

    
</div>

<div class="back">
    <a asp-controller="DashBoard" asp-action="Index" class="btn btn-primary">Back</a>
</div>
<style>
    .gallery-banner {
        width: 100%;
        height: 200px; /* Adjust height as needed */
        background-image: url('your-image-url.jpg'); /* Replace with your image URL */
        background-color: #BB271A;
        background-size: cover;
        background-position: center;
        color: white;
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: Century Gothic;
        font-size: 30px;
        margin-bottom: 60px;
    }

    /* GENERAL INPUT STYLE */
    input[type="text"],
    input[type="date"],
    input[type="number"],
    input[type="email"],
    input[type="password"],
    select {
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 0.375rem;
        width: 100%;
        box-sizing: border-box;
        transition: border-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        input[type="text"]:focus,
        input[type="date"]:focus,
        input[type="number"]:focus,
        input[type="email"]:focus,
        input[type="password"]:focus,
        select:focus {
            border-color: #4a90e2;
            outline: none;
            box-shadow: 0 0 5px rgba(74, 144, 226, 0.5);
        }

    /* LABELS */
    label {
        display: block;
        margin-bottom: 0.3rem;
        font-weight: 600;
        color: #333;
    }

    /* TABLE STYLING */
    table {
        width: 105%;
        border-collapse: collapse;
        margin-top: 1rem;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 0.375rem;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    thead {
        background-color: #f5f5f5;
