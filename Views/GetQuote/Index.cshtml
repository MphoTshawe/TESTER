    }

    th, td {
        padding: 0.75rem;
        border-bottom: 1px solid #ddd;
    }

    th {
        font-weight: 700;
        color: #333;
    }

    tr:hover {
        background-color: #f9f9f9;
    }

    /* BUTTONS (Optional) */
    button, .btn {
        background-color: #BB271A;
        color: white;
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 0.375rem;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
    }

    button:hover, .btn:hover {
        background-color: #BB271A;
    }

    .back{
        margin-left: 550px;
        margin-top:25px;

     }
</style>